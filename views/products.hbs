<div class="content bg-white">
    {{#if alert}}
    <div class="alert alert-danger alert-dismissible fade show m-3 shadow" role="alert">
        {{message}}
        <a type="button" href="/products" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </a>
    </div>
    <a class="btn btn-primary mx-3" href="/products">Tous les produits</a>
    {{/if}}

    {{#if data}}
    <div class="d-flex justify-content-between mb-4">
        <h1>Produits</h1>

        <a href="/create_product" class="btn btn-primary">
            Ajouter produit
        </a>
    </div>

    <table id="basic-data-table" class="table nowrap">
        <thead class="thead thead-light">
            <tr>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Prix/FRS</th>
                <th>Quantité</th>
                <th>Fournisseur</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>

        <tbody>
            {{#each data}}
            <tr>
                <td>{{name}}</td>
                <td>{{category}}</td>
                <td>{{price}}</td>
                <td>{{quantity}}</td>
                <td>{{supplier}}</td>
                <td>{{date}}</td>
                <td>{{time}}</td>
                <td>
                    <form class="form" method="post" action="/findId">
                        <input type="hidden" name="id" value="{{id}}"><button
                            class="btn btn-sm d-block w-100 btn-secondary">Modifier</button>
                    </form>
                </td>
                <td>
                    <form class="form" method="post" action="/delete_product">
                        <input type="hidden" name="id" value="{{id}}"><button
                            class="btn btn-sm d-block w-100 btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{/if}}
</div>